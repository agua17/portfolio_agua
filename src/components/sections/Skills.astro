---
import Section from "../Section.astro";
import { habilidades } from "@cv";
import {
  CheckCircle,
  Rocket,
  Users,
  BatteryCharging,
  Flame,
} from "lucide-react";

const iconMap = {
  CheckCircle,
  Rocket,
  Users,
  BatteryCharging,
  Flame,
};
---

<Section title="Habilidades">
  <ul class="grid grid-cols-2 sm:grid-cols-3 gap-6 p-6">
    <li
      class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg flex flex-col items-center hover:scale-105 transition-transform duration-300"
    >
      <span class="text-4xl">✅</span>
      <span class="text-lg font-semibold text-gray-900 dark:text-white mt-2"
        >Responsable</span
      >
    </li>
    <li
      class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg flex flex-col items-center hover:scale-105 transition-transform duration-300"
    >
      <span class="text-4xl">🚀</span>
      <span class="text-lg font-semibold text-gray-900 dark:text-white mt-2"
        >Proactiva</span
      >
    </li>
    <li
      class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg flex flex-col items-center hover:scale-105 transition-transform duration-300"
    >
      <span class="text-4xl">🤝</span>
      <span class="text-lg font-semibold text-gray-900 dark:text-white mt-2"
        >Trabajo en equipo</span
      >
    </li>
    <li
      class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg flex flex-col items-center hover:scale-105 transition-transform duration-300"
    >
      <span class="text-4xl">🔋</span>
      <span class="text-lg font-semibold text-gray-900 dark:text-white mt-2"
        >Autosuficiente</span
      >
    </li>
    <li
      class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg flex flex-col items-center hover:scale-105 transition-transform duration-300 col-span-2 sm:col-span-1"
    >
      <span class="text-4xl">🔥</span>
      <span class="text-lg font-semibold text-gray-900 dark:text-white mt-2"
        >Tolerancia a la presión</span
      >
    </li>
  </ul>
</Section>
