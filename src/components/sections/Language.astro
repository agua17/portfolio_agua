---
import Section from "../Section.astro";
import { Image } from "astro:assets";
import { languages } from "@cv";
import icon_html from "../../assets/html-5.png";
import icon_js from "../../assets/js.png";
import icon_ts from "../../assets/typescript.png";
import icon_angular from "../../assets/logo_angular.png";
import icon_astro from "../../assets/astro.png";
import icon_css from "../../assets/css-3.png";
import icon_tailwind from "../../assets/tailwind.png";
---

<Section title="Lenguajes de ProgramaciÃ³n">
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
    {
      languages[0].lenguajes.map((keyword) => (
        <div class="flex flex-col items-center">
          {keyword.icon_html && (
            <Image
              src={icon_html}
              alt={keyword.name}
              width={64}
              height={64}
              class="mb-2"
            />
          )}
          {keyword.icon_js && (
            <Image
              src={icon_js}
              alt={keyword.name}
              width={64}
              height={64}
              class="mb-2"
            />
          )}
          {keyword.icon_ts && (
            <Image
              src={icon_ts}
              alt={keyword.name}
              width={64}
              height={64}
              class="mb-2"
            />
          )}
          {keyword.icon_angular && (
            <Image
              src={icon_angular}
              alt={keyword.name}
              width={64}
              height={64}
              class="mb-2"
            />
          )}
          {keyword.icon_astro && (
            <Image
              src={icon_astro}
              alt={keyword.name}
              width={64}
              height={64}
              class="mb-2"
            />
          )}
          {keyword.icon_css && (
            <Image
              src={icon_css}
              alt={keyword.name}
              width={64}
              height={64}
              class="mb-2"
            />
          )}
          {keyword.icon_tailwind && (
            <Image
              src={icon_tailwind}
              alt={keyword.name}
              width={64}
              height={64}
              class="mb-2"
            />
          )}
          <span class="text-sm text-center">{keyword.name}</span>
        </div>
      ))
    }
  </div>
</Section>
