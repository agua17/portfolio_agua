---
import Section from "../Section.astro";
import { Image } from "astro:assets";
import icon_js from "../../assets/js.png";
import { languages } from "@cv";
---

<Section title="Formacion complementaria">
  <div
    class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
  >
    <figure class="rounded-t-lg">
      <Image src={icon_js} alt="Javascript" />
    </figure>
    <div class="p-5">
      <a
        href="https://udemy-certificate.s3.amazonaws.com/image/UC-f0b4befa-4b3e-41f0-ac4f-11d3072c17a9.jpg"
        target="_blank"
        rel="noopener noreferrer"
      >
        <h5
          class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
        >
          Javascript Total
        </h5>
      </a>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"></p>
      <!-- BotÃ³n para abrir el certificado en otra ventana -->
      <a
        href="https://udemy-certificate.s3.amazonaws.com/image/UC-f0b4befa-4b3e-41f0-ac4f-11d3072c17a9.jpg"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >
        Acceder al certificado
        <svg
          class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
    </div>
  </div>
</Section>
